{
  "extends": "standard",
  "plugins": [
      "standard",
      "promise"
  ],
  "env": {
    "jest": true,
    "mocha": true,
    "node": true
  },
  "globals":{
    "define": true
  },
  "rules": {
    "one-var": ["off"],
    "no-loop-func": ["off"],
    "no-shadow": ["off"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "no-debugger": ["warn"]
  }
}
